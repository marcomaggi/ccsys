@example
cce_location_t        L[1];

if (cce_location(L)) @{
  cce_run_error_handlers_final(L);
@} else @{
  char const *        ciao;

  @{
    ccsys_setenv(L, "CIAO", "123", true);

    ciao = ccsys_getenv(L, "CIAO");
    assert(NULL != ciao);
    assert(0 == strncmp("123", ciao, strlen("123")));
  @}

  /* Call setenv without overwriting. */
  @{
    ccsys_setenv(L, "CIAO", "456", false);

    ciao = ccsys_getenv(L, "CIAO");
    assert(NULL != ciao);
    assert(0 == strncmp("123", ciao, strlen("123")));
  @}

  /* Call setenv overwriting. */
  @{
    ccsys_setenv(L, "CIAO", "789", true);

    ciao = ccsys_getenv(L, "CIAO");
    assert(NULL != ciao);
    assert(0 == strncmp("789", ciao, strlen("123")));
  @}

  cce_run_clean_handlers(L);
@}
