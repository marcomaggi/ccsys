  __attribute__((__nonnull__(1,2),__returns_nonnull__));

#define ccsys_realloc_guarded(L,P_H,old_P,newsize) \
  _Generic((P_H),								\
	   cce_cleanup_handler_t	*: ccsys_realloc_guarded_cleanup,	\
