#define ccsys_malloc_guarded(L,P_H,size) \
  _Generic((P_H),								\
	   cce_cleanup_handler_t	*: ccsys_malloc_guarded_cleanup,	\
	   cce_error_handler_t		*: ccsys_malloc_guarded_error)(L,P_H,size)

